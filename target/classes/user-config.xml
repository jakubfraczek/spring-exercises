<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean name="user1" class="pl.sda.user.User">
        <constructor-arg name="login" value="AnnaKowalska11"/>
        <constructor-arg name="name" value="Stefan"/>
        <constructor-arg name="surname" value="Nowak"/>
        <constructor-arg name="age" value="35"/>
    </bean>
    <bean name="user2" class="pl.sda.user.User">
        <constructor-arg name="login" value="GrazynaGrazyna"/>
        <constructor-arg name="name" value="Anna"/>
        <constructor-arg name="surname" value="Iksinska"/>
        <constructor-arg name="age" value="12"/>
    </bean>
    <bean name="user3" class="pl.sda.user.User">
        <constructor-arg name="login" value="MariaAnna"/>
        <constructor-arg name="name" value="Iza"/>
        <constructor-arg name="surname" value="Popek"/>
        <constructor-arg name="age" value="57"/>
    </bean>

    <bean name="users" class="pl.sda.user.InMemoryUserDAO">
        <constructor-arg name="users">
            <list>
                <ref bean="user1"/>
                <ref bean="user2"/>
                <ref bean="user3"/>
            </list>
        </constructor-arg>
    </bean>

    <bean name="sevrice" class="pl.sda.user.DefaultUserService">
        <constructor-arg name="userDAO" ref="users"/>
    </bean>
</beans>